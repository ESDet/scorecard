#block-boxes-did-you-know.block.block--boxes.block--boxes-dyk_box.block--boxes-did-you-know
  %h2.block__title
    - if local_assigns[:icon]
      = image_tag icon
    = title
  .block__content
    #boxes-box-school_score_widget.boxes-box
      .boxes-box-content
        .grade_container
          .grade= grade[:letter].to_s.length < 3 ? grade[:letter] : '?'
          .grade.sub3 #{grade[:total]} / #{grade[:possible]}
        .subscore_wrapper
          = render 'shared/subscores', :scores => grade[:details]
        .clear_floats
