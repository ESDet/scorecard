!!!
%html
  = render 'layouts/head'
  
  %body
    #container
      #bodywrap.l-content
        %aside.l-content-left
          .branding{:role => "banner"}
            %a.site-logo{:href => "/", :rel => "home", :title => "Home"}
              = image_tag 'scorecard_logo.png'
            .l-region.l-region--branding
              %nav.block.block--menu-block.block--menu-block--1
                .menu-block-wrapper.menu-block-1.menu-level-1
                  %ul.menu.selectnav-processed
                    %li.first.last.expanded.active-trail.active
                      = link_to 'Schools', schools_path
                    - if false
                      %li.first.leaf.expanded.active-trail.active
                        = link_to 'Map', map_path
  
  
        
          #block-mailchimp-lists-get-email-updates
            .block__content
              %h3= link_to 'Read the media release', 'https://www.excellentschoolsdetroit.org/en/media/making-grade-excellent-schools-detroit-scorecard-arms-parents-data-quality-school-choice'
                
  
          .blue
            %h2 Top 10 Highest-Graded Schools in Detroit
            %ul
              - @top.each do |s|
                - grade = s.grades[:cumulative]
                %li= link_to s.name, s
          
          %br/

        %section.l-content-right
          .l-region.l-content-main{:role => "main"}
            = yield
  
      = render 'layouts/footer'