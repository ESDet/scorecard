%head
  %title #{defined?(@subtitle) ? "#{@subtitle} -" : ''} Excellent Schools Detroit Scorecard #{Rails.env != 'production' ? "(#{Rails.env})" : ""}
  %meta{:charset => "utf-8"}/
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=#{android? ? 'yes' : 'no'}"}/
  %link{:rel => "icon", :href => "/images/scorecard_favicon.png", :type => 'image/x-icon'}
  %link{:rel => "apple-touch-icon", :href => "/images/scorecard_favicon.png"}
  = render :partial => 'shared/fb_meta'
  = csrf_meta_tag
  
  - if Rails.env == 'development'
    = include_javascripts :common, :mapping
    = include_stylesheets :common
    %link{:rel => "stylesheet/less", :type => "text/css", :href => "/stylesheets/style.less", :media => 'all'}
    %link{:rel => "stylesheet/less", :type => "text/css", :href => "/stylesheets/print.less", :media => 'print'}
    = javascript_include_tag 'less-1.2.0.min.js'
  - else
    = javascript_include_tag '/assets/common.js', '/assets/mapping.js'
    = stylesheet_link_tag '/assets/common.css', :media => 'all'
    = stylesheet_link_tag 'style.css', :media => 'all'
    = stylesheet_link_tag 'print.css', :media => 'print'
  :erb
    <!--[if lte IE 8]><link rel="stylesheet" href="/leaflet/leaflet.ie.css" /><![endif]-->
    <!--[if lt IE 9]><script language="javascript" type="text/javascript" src="/javascripts/excanvas.js"></script><![endif]-->      
