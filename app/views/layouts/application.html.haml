!!!
%html
  %head
    %title #{defined?(@subtitle) ? "#{@subtitle} -" : ''} Excellent Schools Detroit Score Card #{Rails.env != 'production' ? "(#{Rails.env})" : ""}
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=#{android? ? 'yes' : 'no'}"}/
    = render :partial => 'shared/fb_meta'
    = csrf_meta_tag
    
    - if Rails.env == 'development'
      = include_javascripts :common, :mapping
      = include_stylesheets :common
      %link{:rel => "stylesheet/less", :type => "text/css", :href => "/stylesheets/style.less", :media => 'all'}
      %link{:rel => "stylesheet/less", :type => "text/css", :href => "/stylesheets/print.less", :media => 'print'}
      = javascript_include_tag 'less-1.2.0.min.js'
    - else
      = javascript_include_tag '/assets/common.js', '/assets/mapping.js'
      = stylesheet_link_tag '/assets/common.css', :media => 'all'
      = stylesheet_link_tag 'style.css', :media => 'all'
      = stylesheet_link_tag 'print.css', :media => 'print'
    :erb
      <!--[if lte IE 8]><link rel="stylesheet" href="/leaflet/leaflet.ie.css" /><![endif]-->
      <!--[if lt IE 9]><script language="javascript" type="text/javascript" src="/javascripts/excanvas.js"></script><![endif]-->      

  %body
    #nav
      .container_12
        .grid_12.menu
          %a{:class => current_page?(root_path) ? 'active' : '', :href => root_path}
            %i.icon-home.icon-white
            Home
          %a{:class => current_page?(schools_path) ? 'active' : '', :href => schools_path}
            %i.icon-list.icon-white
            Schools
          %a{:class => current_page?(map_path) ? 'active' : '', :href => map_path}
            %i.icon-map-marker.icon-white
            Map

          = form_tag '/search', { :method => :post, :class => 'form-search search' } do
            = text_field_tag :q, nil, :style => 'width: 200px;', :placeholder => 'Search by school name'
            = submit_tag 'Search', :class => 'btn'
          :javascript
            $(document).ready(function() {
              var school_names = #{School.select('id, SCHOOL_NAME_2011').collect { |s| s.SCHOOL_NAME_2011 }.to_json};
              $('input#q').typeahead({ source: school_names });
            });
      
    = yield

    .footer.noprint
      .container_12
        .grid_3.centered
          = link_to image_tag('/images/logo.png', :style => 'height: 100px; width: auto;'), 'http://excellentschoolsdetroit.org'
        .grid_3.centered
          = link_to image_tag('/images/loveland.png', :style => 'height: 100px; width: auto;'), 'http://makeloveland.com'
        .grid_3.centered
          = link_to image_tag('/images/workdept.png', :style => 'height: 100px; width: auto;'), 'http://theworkdept.com'
        .grid_3.centered
          = link_to image_tag('/images/d3.png', :style => 'height: 100px; width: auto;'), 'http://datadrivendetroit.org'
