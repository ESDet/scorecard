.school-banner
  .overview
    .school-image(style="background-image:url(#{school.photo})")
    .school-name
      %h1= school.display_name
    .school-type
      = school.governance
      - if school.authorizer.present?
        | #{school.authorizer}
      - elsif school.operator.present?
        | #{school.operator}
    .overall-performance
      .section
        .columns
          .column
            .info-box.info-box--small
              .info-box__title Overall Grade
              .info-box__content.info-box__content--overview
                .text
                  = school.excellent_schools_grade
          .column
            .info-box.info-box--small
              .info-box__title State
              .info-box__content.info-box__content--overview
                .text.percentile
                  = school.michigan_percentile
                  .suffix= percentile_suffix(school.michigan_percentile)
      .more-rankings
        See more rankings:
        .ranking-link
          %a(href="http://www.greatschools.org/michigan/detroit/" target="_blank")
            Great Schools
            .visit-icon.reverse
        - if school.k8?
          .ranking-link
            %a(href="https://www.mackinac.org/depts/epi/performance.aspx?report=3" target="_blank")
              Mackinac
              .visit-icon.reverse
        - else
          .ranking-link
            %a(href="https://www.mackinac.org/depts/epi/performance.aspx" target="_blank")
              Mackinac
              .visit-icon.reverse
        .ranking-link
          %a(href="http://bridgemi.com/2015/02/asc-resultspage/?Dbcode=#{school.district_code}-#{school.building_code}" target="_blank")
            Bridge
            .visit-icon.reverse
    .contact-info
      .info= school.street
      - if school.phone.present? || school.fax.present?
        .info
          Phone: #{school.phone} &nbsp;&nbsp;&nbsp;
          - if school.fax.present?
            | &nbsp;&nbsp;&nbsp;Fax: #{school.fax}
    .website-info
      .info
        %a(href="#{school.school_url}" target="_blank")
          %span.visit-icon
          VISIT WEBSITE
      .info
        %a(id="print" title="Print" target="_blank" href="/schools/#{school.id}.pdf?disposition=inline")
          %span.print-icon
        %a(id="download" title="Download" href="/schools/#{school.id}.pdf")
          %span.download-icon
    - if school.hours
      .hours
        = school.hours
    .general-info
