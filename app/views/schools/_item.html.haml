%a.school{href: school_path(school.link), "data-tid" => school.tid}
  .icon
    - if school.earlychild?
      %img(src="#{school.early_childhood_image(:mini, nil)}")
    - else
      .rounded-square.green-background.small
        .grade
          = school.excellent_schools_grade
  .info
    %h3= school.display_name
    - if !school.grades_served.blank?
      %div Grades: #{school.grades_served.join(", ")}
    - elsif school.age_groups
      %div Age Groups: #{school.age_groups.join(", ")}

