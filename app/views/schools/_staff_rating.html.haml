.staff-rating
  .axis
    .right 4
    .left 3
    .middle 3.5
  .bar
    .light-green
    .bronze
    .silver
    .gold
  - state_pct, score_pct = 100 * (@staff_state_avg-3).round(2), 100 * (score.to_f-3).round(2)
  .pointer.state{:style => "right: #{100-state_pct}%;"} State Average = #{state}
  .pointer.score{:style => "right: #{100-score_pct}%;"} This Program = #{score.to_f.round(2)}