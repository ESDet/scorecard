.container_12
  .middle
    %h2 Compare Schools

    .compare
      - @schools.each do |s|
        .school
          .group
            .line
              .name
                %h2= link_to s.display_name, s.link
            .line.clear-floats
              .float-left Type
              .float-right= s.governance
            .line.clear-floats
              .float-left Grades
              .float-right
                - grades = s.grades_served || s.age_groups
                = "#{grades.first} - #{grades.last}"
            .line.clear-floats
              - if s.earlychild?
                = "#{s.early_childhood_rating}"
              - else
                .float-left ESD Grade
                .float-right= s.excellent_schools_grade
            .line.clear-floats
              .float-left State
              .float-right= s.michigan_percentile
          .group.clear-floats
            .region-title
              %h2 Overview
            .line
              .float-left Students Enrolled
              .float-right= s.total_enrollment
            .line.clear-floats
              .float-left Transportation
              .float-right
                - if s.transportation_options.present?
                  .checked
                - else
                  .unchecked
            .line.clear-floats
              .float-left Before Care
              .float-right
                - if s.transportation_options.present?
                  .checked
                - else
                  .unchecked
            .line.clear-floats
              .float-left After Care
              .float-right
                - if s.transportation_options.present?
                  .checked
                - else
                  .unchecked
          .group
            .region-title
              %h2 Performance
          .group
            .region-title
              %h2 Programs
