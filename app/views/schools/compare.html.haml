.container_12
  .middle
    %h2 Compare Schools

    .compare
      - @schools.each do |s|
        .school
          .group
            .line
              .name
                %h2= link_to s.display_name, s.link
            .line.clear-floats
              .float-left Type
              .float-right= s.governance
            .line.clear-floats
              .float-left Grades
              .float-right
                - grades = s.grades_served || s.age_groups
                = "#{grades.first} - #{grades.last}"
            .line.clear-floats
              - if s.earlychild?
                = "#{s.early_childhood_rating}"
              - else
                .float-left ESD Grade
                .float-right= s.excellent_schools_grade
            .line.clear-floats
              .float-left State
              .float-right= s.michigan_percentile
          .group.clear-floats
            .region-title
              %h2 Overview
            .line
              .float-left Students Enrolled
              .float-right= s.total_enrollment
            .line.clear-floats
              .float-left Transportation
              .float-right
                - if s.transportation_options.present?
                  .checked
                - else
                  .unchecked
            .line.clear-floats
              .float-left Before Care
              .float-right
                - if s.transportation_options.present?
                  .checked
                - else
                  .unchecked
            .line.clear-floats
              .float-left After Care
              .float-right
                - if s.transportation_options.present?
                  .checked
                - else
                  .unchecked
          .group
            .region-title
              %h2 Performance
            - if s.earlychild?
            - else
              - if s.k8?
                %h3 Proficiency
                .line.clear-floats
                  .float-left Math
                  .float-right= s.math_prepared
                .line.clear-floats
                  .float-left Reading and Writing
                  .float-right= s.ela_prepared
                .line.clear-floats
                  .float-left Science
                  .float-right= s.science_prepared
                .line.clear-floats
                  .float-left Social Studies
                  .float-right= s.socstud_prepared
                %h3 Growth
                .line.clear-floats
                  .float-left Math Growth
                  .float-right= s.math_growth
                .line.clear-floats
                  .float-left Reading Growth
                  .float-right= s.reading_growth
                .line.clear-floats
                  .float-left 5Essentials Rating
                  .float-right= s.five_e_overall_rating
              - else
                %h3 Proficiency
                .line.clear-floats
                  .float-left English
                  .float-right= s.english_college_ready
                .line.clear-floats
                  .float-left Math
                  .float-right= s.math_college_ready
                .line.clear-floats
                  .float-left Reading
                  .float-right= s.reading_college_ready
                .line.clear-floats
                  .float-left Science
                  .float-right= s.science_college_ready
                %h3 Growth
                .line.clear-floats
                  .float-left English Growth
                  .float-right= s.english_growth
                .line.clear-floats
                  .float-left Math
                  .float-right= s.math_growth
                .line.clear-floats
                  .float-left Reading
                  .float-right= s.reading_growth
                .line.clear-floats
                  .float-left Science
                  .float-right= s.science_growth
                %h3 College
                .line.clear-floats
                  .float-left 4-Year Grad
                  .float-right= s.graduate_in_four_years
                .line.clear-floats
                  .float-left 5-Year Grad
                  .float-right= s.graduate_in_five_years
                .line.clear-floats
                  .float-left Enroll in College
                  .float-right= s.enroll_in_college
                .line.clear-floats
                  .float-left Stay in College
                  .float-right= s.stay_in_college
                .line.clear-floats
                  .float-left 5Essentials Rating
                  .float-right= s.five_e_overall_rating
          .group
            .region-title
              %h2 Programs
            - if s.earlychild?
            - else
              .line
                .float-left Special Ed
                .float-right= s.special_ed
              .line.clear-floats
                .float-left ELL
                .float-right= s.ell
              .line.clear-floats
                .float-left World Language
                .float-right
                //World language (# or Check mark)
              .line.clear-floats
                .float-left Clubs
                .float-right
                //Clubs (# or Check mark)
              .line.clear-floats
                .float-left Sports
                .float-right
                //Sports (# or Check mark)
              .line.clear-floats
                .float-left Arts & Music
                .float-right
                //Arts & Music (# or Check mark)
              .line.list.clear-floats
                %h3 Facilities
                = render 'field_list', list: s.facilities[0..5]
              .line.list
                %h3 AP Classes
                = render 'field_list', list: s.ap_classes[0..5]
