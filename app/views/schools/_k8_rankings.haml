.section
  .columns
    .column
      %a{href: '#proficiency'}
        .info-box
          .info-box__title Proficiency
          .info-box__content.info-box__content--rank
            .text
              = rank_text(school.proficiency_ranking)
    .column
      %a{href: '#growth'}
        .info-box
          .info-box__title Growth
          .info-box__content.info-box__content--rank
            .text
              = rank_text(school.growth_ranking)
    .column
      .info-box
        .info-box__title School Climate
        .info-box__content.info-box__content--rank
          .text
            = climate_text(school.climate_ranking, :k8)
  - if @school.message_to_families.present?
    .columns.three
      .column
        .info-box
          .info-box__title Message to Families
          .info-box__content
            .text
              = @school.message_to_families
